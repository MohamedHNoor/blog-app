<h1 class="text-seondary mb-3">Single user</h1>

<%= render "user", user: @user %>

<div class="border border-5 mx-auto w-100 p-3 mb-3">
  <h2>Bio</h2>
  <p><%= @user.bio %></p>
</div>

<div>
  <% @user.most_recent_posts.each do |post| %>
    <div class="border border-5 mx-auto w-100 p-3 mb-3">
      <h2>Post #<%= post.id %></h2>
      <p><%= post.text %></p>

      <div class="d-flex justify-content-end">
        <span>Comments: <%= "#{post.comments_counter || 0 } "%></span>
        <span>, Likes: <%= "#{ post.likes_counter || 0 }"%></span>
      </div>
    </div>
  <% end %> 
  <div class="text-center mb-3">
    <%= link_to "See All Posts", user_posts_path(@user), class: "btn btn-outline-secondary" %>
  </div>
</div>