<h1>Single post to a given user</h1>

<section>
  <div>
    <div>
      <h2>
      Post #<%= @post.id %> by <%= @user.name %>
      </h2>
      <span>Comments: <%= @post.comments_counter %></span>
      <span>Likes: <%= @post.likes_counter %></span>
    </div>

    <div>
      <p> <%= @post.text %></p>
    </div>
  </div>

  <div>
    <% @post.most_recent_comments.each_with_index do |comment| %>
      <div>
        <h4>
          <%= comment.author.name %>:
        </h4>
        <p>
          <%= comment.text %>
        </p>
      </div>
    <% end %>
  </div>
</section>

